	    <MinVerSkip Condition="'$(Configuration)' == 'Debug'">true</MinVerSkip>
	    <Description>Mean lean automation machine</Description>
	    <Copyright>© 2022 Lars Kjær Thomsen</Copyright>
	    <RepositoryUrl>https://github.com/lkt82/automatron</RepositoryUrl>
	    <Authors>Lars Kjær Thomsen</Authors>
    </PropertyGroup>


  <ItemGroup>
        <PackageReference Include="Bullseye" Version="4.0.0" />
        <PackageReference Include="CommandDotNet" Version="6.0.5" />
