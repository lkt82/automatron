<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
	    <Nullable>enable</Nullable>
	    <MinVerSkip Condition="'$(Configuration)' == 'Debug'">true</MinVerSkip>
	    <Description>The Automatron .NET library is a task automation system that enables you to write you build and deployment workflows in the same language as your .Net applications</Description>
		<PackageTags>Build;Pipeline</PackageTags>
	    <Copyright>© 2022 Lars Kjær Thomsen</Copyright>
	    <RepositoryUrl>https://github.com/lkt82/automatron</RepositoryUrl>
	    <Authors>Lars Kjær Thomsen</Authors>
	    <PackageLicenseExpression>MIT</PackageLicenseExpression>
	    <PackageReadmeFile>README.md</PackageReadmeFile>
	    <MinClientVersion>5.9</MinClientVersion>
    </PropertyGroup>

	<ItemGroup>
		<None Include="..\..\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>

  <ItemGroup>
        <PackageReference Include="Bullseye" Version="4.0.0" />
        <PackageReference Include="CommandDotNet" Version="6.0.5" />
        <PackageReference Include="CommandDotNet.IoC.MicrosoftDependencyInjection" Version="4.0.1" />
        <PackageReference Include="JetBrains.Annotations" Version="2022.1.0">
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Include="MinVer" Version="4.0.0">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

</Project>
